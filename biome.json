{
  "$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "correctness": {
        "useImportExtensions": "off",
        "noUndeclaredDependencies": "off"
      },
      "suspicious": {
        "noDebugger": "off",
        "noConsoleLog": "off",
        "noConsole": "off",
        "noReactSpecificProps": "off"
      },
      "nursery": {},
      "all": true,
      "style": {
        "useConst": "error",
        "noNamespaceImport": "off",
        "noDefaultExport": "info",
        "useBlockStatements": "off",
        "useNamingConvention": "off",
        "noParameterAssign": "error"
      },
      "performance": {
        "all": true,
        "noReExportAll": "off",
        "noBarrelFile": "off"
      },
      "complexity": {
        "all": true,
        "noStaticOnlyClass": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "lineEnding": "lf",
    "formatWithErrors": true,
    "lineWidth": 120,
    "indentStyle": "space"
  },
  "javascript": {
    "linter": {
      "enabled": true
    },
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "bracketSpacing": true
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    }
  },
  "css": {
    "parser": {
      "cssModules": true
    },
    "linter": {
      "enabled": true
    },
    "formatter": {
      "enabled": true,
      "quoteStyle": "single"
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "defaultBranch": "main"
  }
}
